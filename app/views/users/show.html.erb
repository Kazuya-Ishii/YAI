<% provide(:title, @user.name) %>
  <div class="show-wrapper">
    <div class="row">
      <h1>
        <div class="show-profile">
          <div class="image-show">
            <% if @user.image? %>
              <%= image_tag @user.image.url %>
            <% else %>
              <%= image_tag("/images/no-image.png") %>
            <% end %>

          <section class="stats">
            <%= render 'shared/stats' %>
          </section>

          <%= render 'follow_form' if logged_in? %>
        </div>
        <div class="show-profile2">
          <div class="show-name">
            <p>Hi, I am<%= @user.name %>!</p>
          </div>
          <div class="show-birthday">
            <p>(<%= @user.birthday %>)</p>
            <span><b>Topics:</b> <%= @user.topics.count %></span>
          </div>

          </div>
        </div>
        <div class="show-bio">
          <%= @user .remarks %>
        </div>
      </h1>

      <div class="show-topics">
      <% @user.topics.each do |topic| %>
        <div class="row">
            <div class="topic-index-single">
              <% if topic.image.present? %>
              <%= image_tag topic.image.url %>
              <% end %>
              <% if topic.video.present? %>
              <%= video_tag topic.video.url, controls: true %>
              <% end %>
              <p class="topic-text">
                <%= topic.description %>
              </p>
            </div>
        </div>
      <% end %>
      </div>
    </div>
  </div>
