<div class="topic-show-wrapper">
  <div class="container">
    <div class="row">
      <div class="topic-show-image">
        <% if topic.image.present? %>
        <%= image_tag topic.image.url %>
        <% end %>
        <% if topic.video.present? %>
        <%= video_tag topic.video.url, controls: true %>
        <% end %>
      </div>
      <div class="topic-show-title">

      </div>
      <span class="index-category"><%= topic.category %></span>
      <p class="topic-text">
        <%= topic.description %>
      </p>

    </div>

  </div>

</div>
