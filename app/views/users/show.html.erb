<% provide(:title, @user.name) %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= link_to 'Edit Profile', edit_user_path(current_user) , class: 'btn-white' %>
        <h1>
          <% if @user.image? %>
            <%= image_tag @user.image, :class => "mw50" %>
          <% else %>
            <%= image_tag("/images/no-image.png") %>
          <% end %>
          <%= @user.name %>
          <%= @user.birthday %>
          <%= @user .remarks %>
        </h1>
      </section>
    </aside>
  </div>
